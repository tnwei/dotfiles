# Place the following in ~/.gitconfig
# [user]
#    email = <name>
#    name = <name>
# [include]
#     path = .gitmyconfig
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    update = !git checkout main && git fetch --all --prune && git pull
    # The following errors out, and also will error if there are no branches
    # update = !git checkout main && git fetch --all --prune && git pull && git branch --merged | grep -v "\*" | grep -v "main" | xargs git branch -d
    dmb = !git branch --merged main | grep -v "\\*" | grep -v "main" | xargs git branch -d

[core]
    editor = vim
[diff "jupyternotebook"]
    command = git-nbdiffdriver diff
[pull]
	rebase = true
	ff = only
